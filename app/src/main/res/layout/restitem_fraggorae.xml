<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/goraeItemImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/nullitem"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/goraeItemSupply"
                android:text="@string/supplyName"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/darkGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/goraeItemIngre"
                android:text="@string/contact"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
/>

            <TextView
                android:id="@+id/goraeItemAddre"
                android:text="@string/TotalCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:layout_weight="1">
            <Button
            android:id="@+id/giveStar"
            android:text="@string/star"
            android:textColor="@color/darkbrown"
            android:background="@color/yellow"
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>