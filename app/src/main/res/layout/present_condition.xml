<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 신청 현황 (정은)-->

    <ImageView
        android:id="@+id/pcImg"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_person_black_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pcName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:text="정은이네"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/pcImg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pcDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="신청일 : 2020년 5월 12일"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/pcImg"
        app:layout_constraintTop_toBottomOf="@+id/pcName" />


    <ListView
        android:id="@+id/lv"
        android:layout_width="390dp"
        android:layout_height="530dp"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pcImg" />


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv">


        <Button
            android:id="@+id/requestBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:background="#489CFF"
            android:text="수정요청"
            android:textSize="18sp" />

        <Button
            android:id="@+id/acceptBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:background="#489CFF"
            android:text="수락"
            android:textSize="18sp" />

        <Button
            android:id="@+id/refuseBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:background="#F15F5F"
            android:text="거절"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>