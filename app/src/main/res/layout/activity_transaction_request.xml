<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--

    수요자 공급자
    날짜
    원산지 품목 수량 단가 공급가액
    합계

    -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/lightGreen"
        android:elevation="2dp"
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topPanelHeight"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="@dimen/topPanelHeight"
            android:layout_height="match_parent"
            android:background="@drawable/ic_navigate_before_black_24dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/topTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="거래신청서"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:elevation="2dp"
        android:background="@drawable/background_list_border"
        android:layout_margin="10dp"
        android:id="@+id/applicationLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/topPanel"
        app:layout_constraintBottom_toTopOf="@id/completeBtn">

    </FrameLayout>

    <Button
        android:id="@+id/completeBtn"
        android:background="@color/lightGreen"
        android:text="신청완료"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topPanelHeight"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>