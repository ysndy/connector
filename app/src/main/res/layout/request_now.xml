<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:id="@+id/nowproImg"
    android:layout_width="100dp"
    android:layout_height="70dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/nowName"
        android:text="가게명"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="10dp"
        app:layout_constraintLeft_toRightOf="@+id/nowproImg" />

    <TextView
        android:id="@+id/nowDate"
        android:text="신청일 : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/nowproImg"
        app:layout_constraintTop_toBottomOf="@+id/nowName"/>

    <Button
        android:id="@+id/nowBtn1"
        android:text="수정요청"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nowproImg"
        android:layout_marginLeft="30dp"
    />

    <Button
        android:id="@+id/nowBtn2"
        android:text="수락"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/nowBtn1"
        app:layout_constraintTop_toBottomOf="@+id/nowproImg"
        />

    <Button
        android:id="@+id/nowBtn3"
        android:text="거절"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/nowBtn2"
        app:layout_constraintTop_toBottomOf="@+id/nowproImg"
        />


</androidx.constraintlayout.widget.ConstraintLayout>