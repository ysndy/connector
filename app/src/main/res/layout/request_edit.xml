<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/reproImg"
        android:layout_width="100dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/reName"
        android:text="가게명"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/reproImg"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/reDate"
        android:text="신청일 : "
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/reproImg"
        app:layout_constraintTop_toBottomOf="@+id/reName" />

    <Button
        android:id="@+id/reBtn1"
        android:text="거절"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reproImg"
        android:layout_marginLeft="70dp" />

    <Button
        android:id="@+id/reBtn2"
        android:text="수락"
        android:textSize="20sp"
        android:layout_width="120dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toRightOf="@id/reBtn1"
        app:layout_constraintTop_toBottomOf="@+id/reproImg"
        android:layout_marginLeft="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>