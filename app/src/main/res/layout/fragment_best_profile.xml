<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".doyeon.lib.bestpager.BestProfileFragment">

    <LinearLayout
        android:layout_margin="20dp"
        android:padding="10dp"
        android:layout_gravity="center"
        android:elevation="4dp"
        android:background="@drawable/background_profileitem"
        android:id="@+id/bestProfileObjectPanel"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/best_profile_item_height">

        <ImageView
            android:layout_weight="5"
            android:id="@+id/bestProfileImageView"
            android:src="@drawable/ic_face_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <TextView
            android:layout_weight="2"
            android:textAlignment="center"
            android:id="@+id/bestProfileName"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

    </LinearLayout>

</FrameLayout>